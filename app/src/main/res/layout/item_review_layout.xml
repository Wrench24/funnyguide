<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  style="@style/cardview_info"
  android:layout_marginTop="3dp"
  android:layout_marginBottom="3dp"
  android:layout_marginLeft="6dp"
  android:layout_marginRight="6dp"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="3dp"
  app:cardElevation="3dp" >

  <RelativeLayout
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/image_user_review"
      android:tint="@color/colorPrimary"
      android:src="@drawable/ic_account_profile"
      android:layout_width="35dp"
      android:layout_height="35dp"/>

    <TextView
      android:layout_alignTop="@+id/image_user_review"
      android:layout_alignBottom="@+id/image_user_review"
      android:layout_toRightOf="@+id/image_user_review"
      android:gravity="center"
      android:layout_marginLeft="6dp"
      android:id="@+id/name_user_review"
      style="@style/text_lbl_poster_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <TextView
      android:layout_below="@+id/image_user_review"
      android:layout_marginTop="10dp"
      android:id="@+id/review_movie"
      style="@style/text_poster_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  </RelativeLayout>

</android.support.v7.widget.CardView>